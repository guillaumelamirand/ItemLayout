<assembly>
	<id>addon</id>
	<formats>
		<format>zip</format>
	</formats>
	<includeBaseDirectory>false</includeBaseDirectory>
	<fileSets>
		<fileSet>
			<directory>../itemlayout/src/main/java</directory>
			<outputDirectory>${addonFullName}/src</outputDirectory>
			<includes>
				<include>**/*.java</include>
			</includes>
		</fileSet>
		<fileSet>
			<directory>../itemlayout-demo/src/main/java</directory>
			<outputDirectory>${addonFullName}/demo/src</outputDirectory>
			<includes>
				<include>**/*.java</include>
			</includes>
		</fileSet>
		<fileSet>
			<directory>../itemlayout-demo/src/main/webapp</directory>
			<outputDirectory>${addonFullName}/demo/webapp</outputDirectory>
			<includes>
				<include>WEB-INF/**</include>
			</includes>
		</fileSet>
		<fileSet>
			<directory>target/classes/</directory>
			<outputDirectory>.</outputDirectory>
		</fileSet>
		<fileSet>
			<directory>..</directory>
			<outputDirectory>${addonFullName}/</outputDirectory>
			<includes>
				<include>LICENSE</include>
				<include>README.md</include>
			</includes>
		</fileSet>
	</fileSets>
	<dependencySets>
		<dependencySet>
			<outputDirectory>${addonFullName}</outputDirectory>
			<useStrictFiltering>true</useStrictFiltering>
			<includes>
				<include>org.vaadin.addon:itemlayout</include>
				<include>org.vaadin.addon:itemlayout-demo:war</include>
			</includes>
			<outputFileNameMapping>${artifact.artifactId}-${artifact.version}.${artifact.extension}
			</outputFileNameMapping>
		</dependencySet>
		<dependencySet>
			<outputDirectory>${addonFullName}</outputDirectory>
			<useStrictFiltering>true</useStrictFiltering>
			<includes>
				<include>org.vaadin.addon:itemlayout:jar:sources</include>
				<include>org.vaadin.addon:itemlayout-demo:jar:sources</include>
			</includes>
			<outputFileNameMapping>${artifact.artifactId}-${artifact.version}-${artifact.classifier}.${artifact.extension}
			</outputFileNameMapping>
		</dependencySet>
	</dependencySets>
</assembly>